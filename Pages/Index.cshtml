@page
@model IndexModel
@{
    ViewData["Title"] = "My Pretty Music Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        /* ====== GIRLY AESTHETIC THEME ====== */
        body {
            background: linear-gradient(135deg, #ffb6c1, #ffc0cb, #ffe4e1);
            font-family: "Poppins", "Comic Sans MS", sans-serif;
            color: #fff;
            text-align: center;
            padding: 50px;
            overflow-x: hidden;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 20px;
            background: linear-gradient(90deg, #ff69b4, #ffb6c1, #ffd1dc, #ff69b4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 15px rgba(255, 182, 193, 0.6);
            animation: pulse 2s infinite alternate, glow 4s infinite linear;
            letter-spacing: 3px;
        }

        /* Animation for pulse + glow */
        @@keyframes pulse {
            0% { transform: scale(1); }
            100% { transform: scale(1.1); }
        }

        @@keyframes glow {
            0% { text-shadow: 0 0 10px #fff, 0 0 20px #ff69b4, 0 0 30px #ffb6c1; }
            50% { text-shadow: 0 0 20px #fff, 0 0 30px #ffb6c1, 0 0 40px #ffc0cb; }
            100% { text-shadow: 0 0 10px #fff, 0 0 20px #ff69b4, 0 0 30px #ffb6c1; }
        }

        /* Sparkle animation elements */
        .sparkle {
            position: absolute;
            width: 10px;
            height: 10px;
            background: radial-gradient(circle, #fff 0%, #ffb6c1 80%);
            border-radius: 50%;
            opacity: 0.7;
            animation: sparkleMove 5s linear infinite;
        }

       @@keyframes sparkleMove {
            0% { transform: translateY(0) scale(1); opacity: 0.7; }
            50% { transform: translateY(-30px) scale(1.3); opacity: 1; }
            100% { transform: translateY(0) scale(1); opacity: 0.7; }
        }

        .video-container {
            position: relative;
            width: 80%;
            max-width: 700px;
            margin: 40px auto;
            overflow: hidden;
            border-radius: 20px;
            box-shadow: 0 0 25px rgba(255, 182, 193, 0.6);
        }

        iframe {
            width: 100%;
            height: 400px;
            border: none;
        }

        footer {
            margin-top: 40px;
            color: #fff;
            font-size: 0.9em;
            text-shadow: 0 0 5px #ff69b4;
        }
    </style>
</head>
<body>
    <h1 id="animatedTitle">My Pretty Song 🎀</h1>

    <div class="video-container">
        <!-- Replace this with your favorite song -->
        <iframe width="560" height="315" src="https://www.youtube.com/embed/YQHsXMglC9A?si=Bumfl-73_vCeQ5-l" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>

    <footer>
        ✨ Made with 💗 using ASP.NET Core ✨
    </footer>

    <script>
        // ====== EXTRA COOL ANIMATION: RANDOM SPARKLES + COLOR SHIFT ======
        const title = document.getElementById("animatedTitle");
        const colors = ["#ff69b4", "#ffb6c1", "#ff85a2", "#ffc0cb", "#ffe4e1"];
        let colorIndex = 0;

        // Change the gradient color of the title periodically
        function shiftColors() {
            title.style.background = `linear-gradient(90deg, ${colors[colorIndex]}, ${colors[(colorIndex + 1) % colors.length]})`;
            title.style.webkitBackgroundClip = "text";
            title.style.webkitTextFillColor = "transparent";
            colorIndex = (colorIndex + 1) % colors.length;
        }

        setInterval(shiftColors, 1000);

        // Add sparkles dynamically
        function createSparkle() {
            const sparkle = document.createElement("div");
            sparkle.classList.add("sparkle");
            sparkle.style.left = Math.random() * window.innerWidth + "px";
            sparkle.style.top = Math.random() * window.innerHeight + "px";
            document.body.appendChild(sparkle);

            setTimeout(() => sparkle.remove(), 5000); // remove after animation
        }

        setInterval(createSparkle, 500);
    </script>
</body>
</html>
